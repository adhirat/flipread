{
  "name": "@shopublish/web",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy:staging": "wrangler deploy --env staging",
    "deploy:prod": "wrangler deploy",
    "db:migrate:local": "wrangler d1 execute DB --local --file=./src/db/schema.sql",
    "db:migrate:staging": "wrangler d1 execute DB --remote --env staging --file=./src/db/schema.sql",
    "db:migrate:prod": "wrangler d1 execute DB --remote --file=./src/db/schema.sql",
    "tsc:check": "tsc --noEmit"
  },
  "dependencies": {
    "hono": "^4.4.0",
    "stripe": "^14.0.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240512.0",
    "typescript": "^5.4.0",
    "wrangler": "^4.65.0"
  }
}
